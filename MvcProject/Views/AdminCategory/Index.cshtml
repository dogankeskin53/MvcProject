@using EntityLayer.Concrete
@*Model List verileri listelemek için kullanılan bileşen*@
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kategori Listem</title>
</head>
<body>
    <div>

        <h3> Kategorilerim </h3>
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Başlıklar</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.CategoryId</th>
                    <td>@item.CategoryName</td>
                    <td><a href="#" class="btn btn-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>

<a href="/AdminCategory/AddCategory" class="btn btn-info"> Yeni Kategori Ekle</a>

